	<% provide(:title, 'Show') %>
<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.picture.url if @user.picture? %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Location:</strong>
  
  <%= @user.location %>
</p>

<p>
  <strong>Your Post:</strong>
  <%= link_to(@micropost_title,"/microposts/"+@micropost_id)%>
</p>

<p>
  <strong>Your Reservation</strong>
  <% @microposts.each do |micropost| %>
    <%= link_to(micropost.title,"/microposts/"+micropost.id.to_s)%>
  <% end %>
</p>
<div>
</div>

